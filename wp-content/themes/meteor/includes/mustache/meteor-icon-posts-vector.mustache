<div class="meteor-icon-posts type-vector {{container_class}}{{#split}} {{{split}}}{{/split}}{{#visibility}} {{{visibility}}}{{/visibility}}" data-icon-glyphs="{{#icon_glyphs}}true{{/icon_glyphs}}{{^icon_glyphs}}false{{/icon_glyphs}}"{{^circle_frame}} data-align="{{{align}}}"{{/circle_frame}}{{#inline_css}} style="{{{inline_css}}}"{{/inline_css}}>
{{#title_heading}}<h2 class="title-heading">{{title_heading}}</h2>{{/title_heading}}
{{#rows}}
  <div class="row">
    {{#posts}}
    <div class="item {{{columns_class}}} text-{{{align}}} {{{post_class}}}"{{#padding}} style="padding-{{{align}}}: {{{padding}}}px;"{{/padding}}>
      {{#hex}}
      {{#icon_link}}{{#meta_url}}<a href="{{{meta_url}}}">{{/meta_url}}{{/icon_link}}<span class="shape hex" style="width: {{{width}}}px; height: {{{height}}}px; line-height: {{{height}}}px;">
        <i class="{{{meta_icon}}}" style="font-size: {{{font_size}}}px;"></i>
        <canvas class="meteor-shape" data-shape="hex" data-fill-color="{{{color}}}" width="{{{width}}}" height="{{{height}}}" style="width: {{{width}}}px; height: {{{height}}}px;"></canvas>
      </span>{{#icon_link}}{{#meta_url}}</a>{{/meta_url}}{{/icon_link}}
      {{/hex}}{{#circle}}
      {{#icon_link}}{{#meta_url}}<a href="{{{meta_url}}}">{{/meta_url}}{{/icon_link}}<span class="shape circle" style="width: {{{width}}}px; height: {{{height}}}px; line-height: {{{height}}}px;">
        <i class="{{{meta_icon}}}" style="font-size: {{{font_size}}}px;"></i>
      </span>{{#icon_link}}{{#meta_url}}</a>{{/meta_url}}{{/icon_link}}
      {{/circle}}{{#circle_frame}}
        <a class="circle-frame"{{#icon_link}}{{#meta_url}} href="{{{meta_url}}}"{{/meta_url}}{{/icon_link}}><i class="{{{meta_icon}}}" style="font-size: {{{font_size}}}px;"></i></a>
      {{/circle_frame}}{{#noshape}}
        {{#icon_link}}{{#meta_url}}<a href="{{{meta_url}}}">{{/meta_url}}{{/icon_link}}<span class="shape noshape" style="width: {{{width}}}px; height: {{{height}}}px; line-height: {{{height}}}px;">
          <i class="{{{meta_icon}}}" style="font-size: {{{font_size}}}px;"></i>
        </span>{{#icon_link}}{{#meta_url}}</a>{{/meta_url}}{{/icon_link}}
      {{/noshape}}
      <div class="meta">
        <h3 class="title">{{#title_link}}{{#meta_url}}<a href="{{{meta_url}}}">{{/meta_url}}{{/title_link}}{{title}}{{#title_link}}{{#meta_url}}</a>{{/meta_url}}{{/title_link}}</h3>
        {{#show_description}}{{#meta_description}}<small class="desc">{{meta_description}}</small>{{/meta_description}}{{/show_description}}
      </div><!-- .meta -->
      {{#show_excerpt}}{{#excerpt_align}}<div class="text-{{{excerpt_align}}}">{{/excerpt_align}}{{{excerpt}}}{{#excerpt_align}}</div>{{/excerpt_align}}{{/show_excerpt}}
      {{#show_link}}{{#meta_url}}{{#link_align}}<div class="text-{{{link_align}}}">{{/link_align}}<a class="{{{link_class}}}" href="{{{meta_url}}}">{{{more_text}}}</a>{{#link_align}}</div>{{/link_align}}{{/meta_url}}{{/show_link}}
    </div><!-- .item -->
    {{/posts}}
  </div><!-- .row -->
{{/rows}}
</div><!-- .meteor-icon-posts -->